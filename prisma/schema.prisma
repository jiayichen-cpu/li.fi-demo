generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LeaderboardSnapshot {
  id          Int      @id @default(autoincrement())
  date        DateTime @unique
  totalVolume Float
  entries     String   // Stored as JSON string
  createdAt   DateTime @default(now())
}
